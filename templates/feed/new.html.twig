{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <!-- general form elements disabled -->
            <div class="box">
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-success alert-dismissible">
                                <ul>
                                    <li>Small feed file sample URL <a target="_blank" href="/small.json">(Small Feed)</a></li>
                                    <li>Large feed file sample URL <a target="_blank" href="/large.json">(Large Feed)</a></li>
                                    <li>Dummy JSON file sample URL <a target="_blank" href="/invalid.json">(Dummy JSON Feed)</a></li>
                                    <li>None JSON file sample URL <a target="_blank" href="/notjson.txt">(Not JSON Feed)</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <a class="btn btn-danger" href="{{ path('feed_index') }}">{{ 'Back'|trans }}</a>
                    <button class="btn btn-primary" type="submit">{{ button_label|default('Start Importing') }}</button>
                    {{ form_end(form) }}
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (right) -->
    </div>
    <!-- /.row -->
{% endblock %}